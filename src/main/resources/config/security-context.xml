<?xml version="1.0" encoding="UTF-8" ?>
<beans:beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:security="http://www.springframework.org/schema/security"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                                 http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <!-- security config -->
    <security:http use-expressions="true" auto-config='true'>
        <security:port-mappings>
            <security:port-mapping http="8080" https="8443"/>
        </security:port-mappings>
        <security:form-login login-page="/login" />
        <security:logout logout-url="/logout" logout-success-url="/login"/>
        <security:intercept-url pattern="/favicon.ico" access="permitAll" requires-channel="https"/>
        <security:intercept-url pattern="/resources/**" access="permitAll" requires-channel="https"/>
        <security:intercept-url pattern="/bundle/**" access="permitAll" requires-channel="https"/>
        <security:intercept-url pattern="/login" access="hasRole('ROLE_ANONYMOUS')" requires-channel="https"/>
        <security:intercept-url pattern="/logout" access="isAuthenticated" requires-channel="https"/>
        <security:intercept-url pattern="/user/register" access="permitAll" requires-channel="https"/>
        <security:intercept-url pattern="/user/update/**" access="hasAnyRole('ROLE_USER')" requires-channel="https"/>
        <security:intercept-url pattern="/user/delete/**" access="hasAnyRole('ROLE_ADMIN')" requires-channel="https"/>
        <security:intercept-url pattern="/" access="permitAll" requires-channel="https"/>
        <security:intercept-url pattern="/administration/**" access="hasAnyRole('ROLE_ADMIN')" requires-channel="https"/>
        <security:intercept-url pattern="/**" access="hasAnyRole('ROLE_USER','ROLE_ADMIN')" requires-channel="https"/>
        <!--<security:intercept-url pattern="/**" access="hasRole('ROLE_ANONYMOUS')" requires-channel="https"/>-->
    </security:http>

    <!-- users - todo: to be replaced with stronger solution -->
    <security:authentication-manager>
        <security:authentication-provider>
            <security:user-service>
                <security:user name="admin@email.com" password="password" authorities="ROLE_USER, ROLE_ADMIN"/>
                <security:user name="user@email.com" password="password" authorities="ROLE_USER"/>
            </security:user-service>
        </security:authentication-provider>
    </security:authentication-manager>

</beans:beans>